<h1>New Heroine</h1>

<%= form_for heroine_powers_path(@heroine, @heroine_power
 ) do |f|%>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>

    <%= f.label :super_name, "Hero Name" %>
    <%= f.text_field :super_name %>

    <%= f.collection_select :power_id, @powers, :id, :name%>
    <%= f.hidden_field :heroine_id, value: @heroine%>
    <%= f.submit%>
<%end%>
