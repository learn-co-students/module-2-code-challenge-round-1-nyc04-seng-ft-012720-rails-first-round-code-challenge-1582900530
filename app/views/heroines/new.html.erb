<h2>New Heroine Application</h2>

<%= form_for(@heroine) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %><br> 

    <br><%= f.label :super_name %>
    <%= f.text_field :super_name %><br>

    <br><%= f.label "Choose Power" %>
    <%= f.collection_select :powers, Power.all, :id, :name %><br>

    <br><%= f.submit "Complete Heroine Application" %>

<% end %>

<% if @heroine.errors %>
    <% @heroine.errors.full_messages.each do |error| %>
    <ul>
        <li>
            <%= error %>
        </li>
    </ul>
    <% end %>
<% end %>